<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AudioPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AudioPlayer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AudioPlayer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AudioPlayer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="txtRegular_12Style" parent="textViewStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="txtRegular_11Style" parent="textViewStyle">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="txtMedium_12Style" parent="textViewStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="txtMedium_10Style" parent="textViewStyle">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="txtBold_30Style" parent="textViewStyle">
        <item name="android:textSize">@dimen/_30sdp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="txtBold_12Style" parent="textViewStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="edtRegular_12Style" parent="editText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="editText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

</resources>